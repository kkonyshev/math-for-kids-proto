<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
	http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context-3.2.xsd">	
	
	<context:component-scan base-package="kkonyshev.math"/>
	
	
	<bean id="leoProfile" class="kkonyshev.mfk.Profile" scope="prototype">
		<property name="name" value="Konyshev Leo"/>
		<property name="birthDate" value="1/30/2013"/>
	</bean>

	<bean id="mockProfileRepository" class="kkonyshev.mfk.service.ProfileRepositoryMock" scope="prototype"/>
	
	<bean id="mockProfileService" class="kkonyshev.mfk.service.ProfileServiceImpl" scope="prototype">
		<property name="profileRepository">
			<ref bean="mockProfileRepository"/>
		</property>
	</bean>	

</beans>